<view class="page-section">
  <view class="section__title">房间类型：</view>

  <block wx:if="{{roomArray.length>4}}"> 
      <view class="flex-wrp" style="flex-direction:row;">
        <block wx:for="{{roomArray}}" wx:key="key">
          <block wx:if="{{index<4}}">
            <block wx:if="{{index==selectedRoomIndex}}">
              <button style="background-color:yellow" id="{{index}}" bindtap="chooseRoomType" class="flex-item">{{item.roomName}}</button>
            </block>
            <block wx:else>
              <button id="{{index}}" bindtap="chooseRoomType" class="flex-item">{{item.roomName}}</button>
            </block>
          </block>
        </block>
      </view>
      <view class="flex-wrp" style="flex-direction:row;">
        <block wx:for="{{roomArray}}" wx:key="key">
          <block wx:if="{{index>=4}}">
            <block wx:if="{{index==selectedRoomIndex}}">
              <button style="background-color:yellow" id="{{index}}" bindtap="chooseRoomType" class="flex-item">{{item.roomName}}</button>
            </block>
            <block wx:else>
              <button id="{{index}}" bindtap="chooseRoomType" class="flex-item">{{item.roomName}}</button>
            </block>
          </block>
        </block>
      </view>
  </block>
  <block wx:else>
      <view class="flex-wrp" style="flex-direction:row;">
        <block wx:for="{{roomArray}}" wx:key="key">
          <block wx:if="{{index>=0}}">
            <block wx:if="{{index==selectedRoomIndex}}">
              <button style="background-color:yellow" id="{{index}}" bindtap="chooseRoomType" class="flex-item">{{item.roomName}}</button>
            </block>
            <block wx:else>
              <button id="{{index}}" bindtap="chooseRoomType" class="flex-item">{{item.roomName}}</button>
            </block>
          </block>
        </block>
      </view>
  </block>

